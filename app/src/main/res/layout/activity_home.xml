<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/dl_home"
    tools:context="com.febers.iuestc.home.view.HomeActivity">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">
        <FrameLayout
            android:id="@+id/home_fragment_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/myBackgroundColor">
        </FrameLayout>

        <com.ashokvarma.bottomnavigation.BottomNavigationBar
            android:id="@+id/bottom_navigation_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            app:bnbBackgroundColor="?attr/myBackgroundColor">
        </com.ashokvarma.bottomnavigation.BottomNavigationBar>
    </android.support.design.widget.CoordinatorLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/nv_home"
        android:layout_gravity="right"
        android:background="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:menu="@menu/home_nav_menu"
        app:itemIconTint="?attr/colorAccent"
        app:headerLayout="@layout/layout_home_header">
    </android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>

